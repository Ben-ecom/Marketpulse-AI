# Required
ANTHROPIC_API_KEY=your-api-key-here  # For most AI ops -- Format: sk-ant-api03-... (Required)
PERPLEXITY_API_KEY=pplx-abcde        # For research -- Format: pplx-abcde (Optional, Highly Recommended)

# Supabase Configuration
SUPABASE_URL=your-supabase-url       # Supabase project URL (Required for database functionality)
SUPABASE_ANON_KEY=your-anon-key      # Supabase anon key for client-side access (Required for database functionality)
SUPABASE_SERVICE_KEY=your-service-key # Supabase service role key for server-side access (Required for database functionality)

# Server Configuration
PORT=3000                         # Port for the Express server
NODE_ENV=development              # Environment (development, production)

# Market Research Module Configuration
MARKET_RESEARCH_CONFIDENCE_THRESHOLD=0.7  # Minimum confidence score for market research results (0.0-1.0)
MARKET_RESEARCH_MAX_COMPETITORS=10        # Maximum number of competitors to analyze
MARKET_RESEARCH_ENABLE_CACHING=true       # Enable caching of market research results

# Decodo API Configuration
DECODO_API_BASE_URL=https://api.decodo.io  # Decodo API base URL (Required for scraping functionality)
DECODO_API_KEY=your-decodo-api-key         # Decodo API key (Required for scraping functionality)

# Optional - defaults shown
MODEL=claude-3-7-sonnet-20250219  # Recommended models: claude-3-7-sonnet-20250219, claude-3-opus-20240229 (Required)
PERPLEXITY_MODEL=sonar-pro        # Make sure you have access to sonar-pro otherwise you can use sonar regular (Optional)
MAX_TOKENS=64000                   # Maximum tokens for model responses (Required)
TEMPERATURE=0.2                   # Temperature for model responses (0.0-1.0) - lower = less creativity and follow your prompt closely (Required)
DEBUG=false                       # Enable debug logging (true/false)
LOG_LEVEL=info                    # Log level (debug, info, warn, error)
DEFAULT_SUBTASKS=5                # Default number of subtasks when expanding
DEFAULT_PRIORITY=medium           # Default priority for generated tasks (high, medium, low)
PROJECT_NAME={{projectName}}      # Project name for tasks.json metadata